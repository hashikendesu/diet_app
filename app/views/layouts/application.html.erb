<!DOCTYPE html>
<html>
  <head>
    <title>DietApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="main">
  <div class="inner">

    <!-- home_box -->
    <div class="home_box">
      <div class="home_inner">
        <h1><a href="/">Dieter</a></h1>
        <div class="home_link">
          <a href="">Home</a>
          <% if user_signed_in? %>
            <%= link_to "Profile", "/users/#{current_user.id}" %>
            <a href="">Calorie intake</a>
          <% end %>
        </div>
        <div class="home_post">
          <% if user_signed_in? %>
            <%= link_to "Target weight", root_path, class: "post" %>
            <%= link_to "Record", root_path, class: "post" %>
            <%= link_to "Post", new_snspost_path, class: "post" %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "post" %>
            <%= link_to "Sign up", new_user_registration_path, class: "post" %>
          <% end %>
        </div>
        <div class="home_profile">
          <img src="/assets/profile.jpg" alt="">
          <p>nameeeeeeee</p>
        </div>
      </div>
    </div>
    <!-- /home_box -->

        <%= yield %>

    <!-- weight_box -->
    <div class="weight_box">
      <div class="goal_box">
        <div class="goal_inner">
          <div class="goal_title">
            <h1>Target weight</h1>
            <div class="weight_drop">
              <img src="/assets/down.png" alt="">
              <div class="weight_drop_box">
                <a href="">編集</a>
                <a href="">削除</a>
              </div>
            </div>
          </div>
          <p class="weight">Target weight : 68kg</p>
          <p class="weight">Current weight : 78kg</p>
          <div class="calorie">
            <h2>Daily target calorie intake</h2>
            <p>2456kcal</p>
          </div>
        </div>
      </div>
      <div class="record_box">
        <div class="record_inner">
          <h1>Calorie intake</h1>
          <div class="food_cal">
            <div class="date_box">
              <h2>Date : 4/12</h2>
              <div class="record_drop">
                <img src="/assets/down.png" alt="">
                <div class="record_drop_box">
                  <a href="">編集</a>
                  <a href="">削除</a>
                </div>
              </div>
            </div>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <p>Food : 274kcal (12:20)</p>
            <div class="total_cal">
              <h2>Total</h2>
              <p>2845kcal</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /weight_box -->

  </div>
</div>

  </body>
</html>
